@model IEnumerable<ST10451194_PROG6212_POE.Models.Claim>

@{
    ViewData["Title"] = "Lecturer Dashboard";

    // Calculate statistics
    var totalClaims = Model.Count();
    var totalEarnings = Model.Sum(c => c.TotalAmount);
    var pendingClaims = Model.Count(c => c.Status == "Pending");
    var approvedClaims = Model.Count(c => c.Status.Contains("Approved"));
    var totalHours = Model.Sum(c => c.HoursWorked);
}

<div class="lecturer-dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fa-solid fa-chart-line"></i>
            </div>
            <div class="header-text">
                <h1>Lecturer Dashboard</h1>
                <p>Overview of your claims, submissions, and earnings</p>
            </div>
        </div>
        <div class="header-actions">
            <a href="/Claim/Create" class="btn-header-action">
                <i class="fa-solid fa-plus-circle"></i>
                Submit New Claim
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card total-card">
            <div class="stat-icon">
                <i class="fa-solid fa-file-invoice"></i>
            </div>
            <div class="stat-content">
                <span class="stat-label">Total Claims</span>
                <span class="stat-value">@totalClaims</span>
                <span class="stat-trend">
                    <i class="fa-solid fa-clock"></i>
                    All time
                </span>
            </div>
        </div>

        <div class="stat-card earnings-card">
            <div class="stat-icon">
                <i class="fa-solid fa-sack-dollar"></i>
            </div>
            <div class="stat-content">
                <span class="stat-label">Total Earnings</span>
                <span class="stat-value">R @totalEarnings.ToString("N2")</span>
                <span class="stat-trend">
                    <i class="fa-solid fa-coins"></i>
                    Cumulative
                </span>
            </div>
        </div>

        <div class="stat-card pending-card">
            <div class="stat-icon">
                <i class="fa-solid fa-hourglass-half"></i>
            </div>
            <div class="stat-content">
                <span class="stat-label">Pending</span>
                <span class="stat-value">@pendingClaims</span>
                <span class="stat-trend">
                    <i class="fa-solid fa-spinner"></i>
                    In review
                </span>
            </div>
        </div>

        <div class="stat-card approved-card">
            <div class="stat-icon">
                <i class="fa-solid fa-circle-check"></i>
            </div>
            <div class="stat-content">
                <span class="stat-label">Approved</span>
                <span class="stat-value">@approvedClaims</span>
                <span class="stat-trend">
                    <i class="fa-solid fa-check-double"></i>
                    Processed
                </span>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-card">
        <div class="filter-header">
            <div class="filter-title">
                <i class="fa-solid fa-filter"></i>
                <span>Filter Claims</span>
            </div>
            <div class="filter-stats">
                Showing @Model.Count() of @totalClaims claims
            </div>
        </div>
        <form method="get" class="filter-form">
            <div class="filter-group">
                <label for="start-date">
                    <i class="fa-solid fa-calendar-day"></i>
                    Start Date
                </label>
                <input type="date"
                       id="start-date"
                       name="startDate"
                       value="@Context.Request.Query["startDate"]"
                       class="filter-input" />
            </div>

            <div class="filter-group">
                <label for="end-date">
                    <i class="fa-solid fa-calendar-check"></i>
                    End Date
                </label>
                <input type="date"
                       id="end-date"
                       name="endDate"
                       value="@Context.Request.Query["endDate"]"
                       class="filter-input" />
            </div>

            <div class="filter-actions">
                <button type="submit" class="btn-filter">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    Apply Filter
                </button>
                <a href="/Lecturer/Dashboard" class="btn-clear">
                    <i class="fa-solid fa-rotate-right"></i>
                    Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Claims Table Card -->
    <div class="table-card">
        <div class="card-header">
            <div class="card-title">
                <i class="fa-solid fa-table-list"></i>
                <h2>My Claims</h2>
            </div>
            <div class="card-actions">
                <a href="/Claim/TrackClaims" class="btn-track">
                    <i class="fa-solid fa-list-check"></i>
                    Track Status
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="claims-table">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa-solid fa-hashtag"></i>
                                    Claim ID
                                </th>
                                <th>
                                    <i class="fa-solid fa-calendar"></i>
                                    Submitted
                                </th>
                                <th>
                                    <i class="fa-solid fa-calendar-days"></i>
                                    Claim Period
                                </th>
                                <th>
                                    <i class="fa-solid fa-clock"></i>
                                    Hours
                                </th>
                                <th>
                                    <i class="fa-solid fa-money-bill-wave"></i>
                                    Rate
                                </th>
                                <th>
                                    <i class="fa-solid fa-sack-dollar"></i>
                                    Total
                                </th>
                                <th class="text-center">
                                    <i class="fa-solid fa-paperclip"></i>
                                    Documents
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr class="claim-row">
                                    <td>
                                        <span class="claim-id-badge">#@claim.ClaimId</span>
                                    </td>
                                    <td>
                                        <span class="date-text">@claim.DateSubmitted.ToString("dd MMM yyyy")</span>
                                    </td>
                                    <td>
                                        <span class="period-badge">
                                            <i class="fa-solid fa-calendar-days"></i>
                                            @claim.StartDate.ToString("MMM yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="hours-badge">@claim.HoursWorked hrs</span>
                                    </td>
                                    <td>
                                        <span class="rate-text">R @claim.HourlyRate.ToString("N2")</span>
                                    </td>
                                    <td>
                                        <span class="amount-text">R @claim.TotalAmount.ToString("N2")</span>
                                    </td>
                                    <td class="text-center">
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <div class="documents-cell">
                                                @foreach (var doc in claim.Documents)
                                                {
                                                    <a href="@Url.Content("~/uploads/" + doc.DocumentName)"
                                                       target="_blank"
                                                       class="doc-link"
                                                       title="View @doc.DocumentName">
                                                        <i class="fa-solid fa-file-pdf"></i>
                                                        <span>View</span>
                                                    </a>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="no-docs">No documents</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Table Summary -->
                <div class="table-summary">
                    <div class="summary-item">
                        <i class="fa-solid fa-clock"></i>
                        <span class="summary-label">Total Hours:</span>
                        <span class="summary-value">@totalHours hrs</span>
                    </div>
                    <div class="summary-divider"></div>
                    <div class="summary-item">
                        <i class="fa-solid fa-wallet"></i>
                        <span class="summary-label">Total Earnings:</span>
                        <span class="summary-value">R @totalEarnings.ToString("N2")</span>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fa-solid fa-inbox"></i>
                    </div>
                    <h3>No Claims Found</h3>
                    <p>You haven't submitted any claims yet. Get started by creating your first claim!</p>
                    <a href="/Claim/Create" class="btn-create-first">
                        <i class="fa-solid fa-plus-circle"></i>
                        Create Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="quick-actions-card">
        <div class="actions-header">
            <i class="fa-solid fa-bolt"></i>
            <span>Quick Actions</span>
        </div>
        <div class="actions-grid">
            <a href="/Claim/Create" class="action-button submit-action">
                <div class="action-icon">
                    <i class="fa-solid fa-file-circle-plus"></i>
                </div>
                <div class="action-text">
                    <span class="action-title">Submit Claim</span>
                    <span class="action-desc">Create a new claim</span>
                </div>
            </a>

            <a href="/Claim/TrackClaims" class="action-button track-action">
                <div class="action-icon">
                    <i class="fa-solid fa-chart-line"></i>
                </div>
                <div class="action-text">
                    <span class="action-title">Track Claims</span>
                    <span class="action-desc">View claim status</span>
                </div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Animate stat cards on load
        document.addEventListener('DOMContentLoaded', function() {
            const statCards = document.querySelectorAll('.stat-card');
            statCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.animation = `slideUp 0.5s ease-out ${index * 0.1}s both`;
                }, 100);
            });

            // Add date validation
            const startDate = document.getElementById('start-date');
            const endDate = document.getElementById('end-date');

            endDate.addEventListener('change', function() {
                if (startDate.value && endDate.value) {
                    if (new Date(endDate.value) < new Date(startDate.value)) {
                        alert('End date cannot be before start date');
                        endDate.value = '';
                    }
                }
            });
        });

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </script>
}

