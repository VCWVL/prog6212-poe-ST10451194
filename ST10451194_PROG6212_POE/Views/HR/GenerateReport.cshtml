@model ST10451194_PROG6212_POE.Models.GenerateReportViewModel
@using System.IO

@{
    ViewData["Title"] = "Generate Reports";
}

<div class="generate-report-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fa-solid fa-file-chart-line"></i>
            </div>
            <div class="header-text">
                <h1>Generate Reports</h1>
                <p>Create comprehensive analytical reports for claims and payments</p>
            </div>
        </div>
    </div>

    <!-- Report Generation Form Card -->
    <div class="form-card">
        <div class="card-header">
            <div class="card-title">
                <i class="fa-solid fa-file-circle-plus"></i>
                <h2>Create New Report</h2>
            </div>
            <div class="card-badge">
                <i class="fa-solid fa-sparkles"></i>
                Generate
            </div>
        </div>

        <form method="post" asp-action="GenerateReport" class="report-form">
            <div class="form-row">
                <div class="form-group full-width">
                    <label for="reportName">
                        <i class="fa-solid fa-signature"></i>
                        Report Name
                    </label>
                    <input type="text"
                           class="form-control"
                           id="reportName"
                           name="reportName"
                           placeholder="Enter a descriptive name for your report"
                           required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="startDate">
                        <i class="fa-solid fa-calendar-day"></i>
                        Start Date
                    </label>
                    <input type="date"
                           class="form-control"
                           id="startDate"
                           name="startDate"
                           required />
                </div>

                <div class="form-group">
                    <label for="endDate">
                        <i class="fa-solid fa-calendar-check"></i>
                        End Date
                    </label>
                    <input type="date"
                           class="form-control"
                           id="endDate"
                           name="endDate"
                           required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group full-width">
                    <label for="reportType">
                        <i class="fa-solid fa-list-check"></i>
                        Report Type
                    </label>
                    <div class="report-type-selector">
                        <select class="form-control" id="reportType" name="reportType">
                            <option value="claims">Claims Report</option>
                            <option value="payments">Payments Report</option>
                        </select>
                        <i class="fa-solid fa-chevron-down select-arrow"></i>
                    </div>
                </div>
            </div>

            <div class="info-banner">
                <i class="fa-solid fa-circle-info"></i>
                <span>Reports will be generated in PDF format and saved for future reference</span>
            </div>

            <button type="submit" class="btn-generate">
                <i class="fa-solid fa-wand-magic-sparkles"></i>
                Generate Report
            </button>
        </form>
    </div>

    <!-- Existing Reports Section -->
    <div class="reports-card">
        <div class="card-header">
            <div class="card-title">
                <i class="fa-solid fa-folder-open"></i>
                <h2>Generated Reports</h2>
            </div>
            <div class="reports-count">
                @if (Model.ExistingReports != null && Model.ExistingReports.Any())
                {
                    <span class="count-badge">@Model.ExistingReports.Count() Reports</span>
                }
                else
                {
                    <span class="count-badge empty">No Reports</span>
                }
            </div>
        </div>

        <div class="card-body">
            @if (Model.ExistingReports != null && Model.ExistingReports.Any())
            {
                <div class="table-responsive">
                    <table class="reports-table">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa-solid fa-file-signature"></i>
                                    Report Name
                                </th>
                                <th>
                                    <i class="fa-solid fa-layer-group"></i>
                                    Type
                                </th>
                                <th>
                                    <i class="fa-solid fa-calendar-range"></i>
                                    Date Range
                                </th>
                                <th class="text-center">
                                    <i class="fa-solid fa-bolt"></i>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model.ExistingReports)
                            {
                                <tr>
                                    <td>
                                        <div class="report-name-cell">
                                            <i class="fa-solid fa-file-pdf file-icon"></i>
                                            <span>@report.ReportName</span>
                                        </div>
                                    </td>
                                    <td>
                                        @if (report.ReportType.ToLower() == "claims")
                                        {
                                            <span class="type-badge claims-badge">
                                                <i class="fa-solid fa-file-invoice"></i>
                                                Claims
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="type-badge payments-badge">
                                                <i class="fa-solid fa-money-bill-wave"></i>
                                                Payments
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="date-range-cell">
                                            <span class="date-start">@report.StartDate.ToString("dd MMM yyyy")</span>
                                            <i class="fa-solid fa-arrow-right date-arrow"></i>
                                            <span class="date-end">@report.EndDate.ToString("dd MMM yyyy")</span>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Content("~/" + report.FilePath)"
                                           target="_blank"
                                           class="btn-view-report"
                                           title="View Report">
                                            <i class="fa-solid fa-file-arrow-down"></i>
                                            View Report
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fa-solid fa-folder-open"></i>
                    </div>
                    <h3>No Reports Generated Yet</h3>
                    <p>Start by creating your first report using the form above</p>
                    <div class="empty-graphic">
                        <i class="fa-solid fa-chart-line"></i>
                        <i class="fa-solid fa-file-invoice"></i>
                        <i class="fa-solid fa-money-bill-trend-up"></i>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        @if (ViewBag.NoClaimsForDateRange != null && (bool)ViewBag.NoClaimsForDateRange)
        {
            <text>
                    // Custom alert notification
                    showNotification("No claims found for the selected date range.", "warning");
            </text>
        }

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `custom-notification ${type}`;
            notification.innerHTML = `
                <i class="fa-solid fa-${type === 'warning' ? 'triangle-exclamation' : 'circle-check'}"></i>
                <span>${message}</span>
                <button onclick="this.parentElement.remove()" class="close-btn">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            `;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 5000);
        }

        // Date validation
        document.addEventListener('DOMContentLoaded', function() {
            const startDate = document.getElementById('startDate');
            const endDate = document.getElementById('endDate');

            endDate.addEventListener('change', function() {
                if (startDate.value && endDate.value) {
                    if (new Date(endDate.value) < new Date(startDate.value)) {
                        showNotification('End date cannot be before start date', 'warning');
                        endDate.value = '';
                    }
                }
            });

            // Highlight report type on change
            const reportType = document.getElementById('reportType');
            reportType.addEventListener('change', function() {
                const selector = this.closest('.report-type-selector');
                selector.classList.add('selected');
                setTimeout(() => selector.classList.remove('selected'), 300);
            });
        });
    </script>
}

