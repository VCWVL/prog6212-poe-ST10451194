@model ST10451194_PROG6212_POE.Models.DashboardViewModel

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="hr-dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fa-solid fa-chart-line"></i>
            </div>
            <div class="header-text">
                <h1>HR Dashboard</h1>
                <p>Comprehensive overview of claims, payments, and system management</p>
            </div>
        </div>
        <div class="header-date">
            <i class="fa-solid fa-calendar"></i>
            <span>@DateTime.Now.ToString("MMMM dd, yyyy")</span>
        </div>
    </div>

    <!-- Key Metrics Overview -->
    <div class="metrics-grid">
        <!-- Total Claims Metric -->
        <div class="metric-card total-card">
            <div class="metric-icon">
                <i class="fa-solid fa-file-invoice"></i>
            </div>
            <div class="metric-content">
                <span class="metric-label">Total Claims</span>
                <span class="metric-value">@Model.TotalClaims</span>
                <span class="metric-badge">All time</span>
            </div>
        </div>

        <!-- Pending Claims Metric -->
        <div class="metric-card pending-card">
            <div class="metric-icon">
                <i class="fa-solid fa-clock"></i>
            </div>
            <div class="metric-content">
                <span class="metric-label">Pending Review</span>
                <span class="metric-value">@Model.PendingClaims</span>
                <span class="metric-badge">Awaiting action</span>
            </div>
        </div>

        <!-- Approved Claims Metric -->
        <div class="metric-card approved-card">
            <div class="metric-icon">
                <i class="fa-solid fa-circle-check"></i>
            </div>
            <div class="metric-content">
                <span class="metric-label">Approved</span>
                <span class="metric-value">@Model.ApprovedClaims</span>
                <span class="metric-badge">Processed</span>
            </div>
        </div>

        <!-- Total Payments Metric -->
        <div class="metric-card payment-card">
            <div class="metric-icon">
                <i class="fa-solid fa-wallet"></i>
            </div>
            <div class="metric-content">
                <span class="metric-label">Total Payments</span>
                <span class="metric-value">R @Model.TotalPayments.ToString("N2")</span>
                <span class="metric-badge">All time</span>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Claims Processing Section -->
        <div class="dashboard-card claims-card">
            <div class="card-header">
                <div class="card-title">
                    <i class="fa-solid fa-clipboard-check"></i>
                    <h2>Claims Processing</h2>
                </div>
                <div class="card-badge">
                    <i class="fa-solid fa-arrow-trend-up"></i>
                    Active
                </div>
            </div>
            <div class="card-body">
                <div class="stats-row">
                    <div class="stat-item">
                        <div class="stat-circle total-stat">
                            <span class="stat-number">@Model.TotalClaims</span>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">Total Claims</span>
                            <span class="stat-sublabel">Lifetime</span>
                        </div>
                    </div>

                    <div class="stat-divider"></div>

                    <div class="stat-item">
                        <div class="stat-circle pending-stat">
                            <span class="stat-number">@Model.PendingClaims</span>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">Pending</span>
                            <span class="stat-sublabel">Need review</span>
                        </div>
                    </div>

                    <div class="stat-divider"></div>

                    <div class="stat-item">
                        <div class="stat-circle approved-stat">
                            <span class="stat-number">@Model.ApprovedClaims</span>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">Approved</span>
                            <span class="stat-sublabel">Completed</span>
                        </div>
                    </div>
                </div>

                @{
                    var approvalRate = Model.TotalClaims > 0
                    ? ((double)Model.ApprovedClaims / Model.TotalClaims * 100)
                    : 0;
                }

                <div class="progress-section">
                    <div class="progress-header">
                        <span class="progress-label">Approval Rate</span>
                        <span class="progress-percentage">@approvalRate.ToString("F1")%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @approvalRate.ToString("F1")%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payments Overview Section -->
        <div class="dashboard-card payments-card">
            <div class="card-header">
                <div class="card-title">
                    <i class="fa-solid fa-money-bill-trend-up"></i>
                    <h2>Payments Overview</h2>
                </div>
                <div class="card-badge">
                    <i class="fa-solid fa-circle"></i>
                    Financial
                </div>
            </div>
            <div class="card-body">
                <div class="payment-item total-payment">
                    <div class="payment-icon">
                        <i class="fa-solid fa-sack-dollar"></i>
                    </div>
                    <div class="payment-details">
                        <span class="payment-label">Total Payments</span>
                        <span class="payment-amount">R @Model.TotalPayments.ToString("N2")</span>
                        <span class="payment-note">Cumulative amount</span>
                    </div>
                </div>

                <div class="payment-item pending-payment">
                    <div class="payment-icon">
                        <i class="fa-solid fa-hourglass-half"></i>
                    </div>
                    <div class="payment-details">
                        <span class="payment-label">Pending Payments</span>
                        <span class="payment-amount">R @Model.PendingPayments.ToString("N2")</span>
                        <span class="payment-note">Awaiting processing</span>
                    </div>
                </div>

                <div class="payment-item completed-payment">
                    <div class="payment-icon">
                        <i class="fa-solid fa-circle-check"></i>
                    </div>
                    <div class="payment-details">
                        <span class="payment-label">Completed Payments</span>
                        <span class="payment-amount">R @Model.CompletedPayments.ToString("N2")</span>
                        <span class="payment-note">Successfully disbursed</span>
                    </div>
                </div>

                @{
                    double completionRate = Model.TotalPayments > 0
                    ? (double)(Model.CompletedPayments / Model.TotalPayments * 100)
                    : 0;
                }


                <div class="progress-section">
                    <div class="progress-header">
                        <span class="progress-label">Completion Rate</span>
                        <span class="progress-percentage">@completionRate.ToString("F1")%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill payment-fill" style="width: @completionRate.ToString("F1")%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Cards Grid -->
    <div class="actions-grid">
        <!-- Reports Action Card -->
        <div class="action-card reports-action">
            <div class="action-icon-large">
                <i class="fa-solid fa-chart-pie"></i>
            </div>
            <div class="action-content">
                <h3>Generate Reports</h3>
                <p>Create detailed analytical reports on claims and payment data for comprehensive insights</p>
                <a href="/Hr/GenerateReport" class="btn-action btn-primary">
                    <i class="fa-solid fa-file-chart-line"></i>
                    View Reports
                </a>
            </div>
            <div class="action-badge">
                <i class="fa-solid fa-sparkles"></i>
            </div>
        </div>

        <!-- Manage Users Action Card -->
        <div class="action-card users-action">
            <div class="action-icon-large">
                <i class="fa-solid fa-users-gear"></i>
            </div>
            <div class="action-content">
                <h3>Manage Users</h3>
                <p>Oversee user accounts, assign roles, and maintain system access levels across the platform</p>
                <a href="/ManageUsers/Index" class="btn-action btn-secondary">
                    <i class="fa-solid fa-users-viewfinder"></i>
                    View Users
                </a>
            </div>
            <div class="action-badge">
                <i class="fa-solid fa-shield-halved"></i>
            </div>
        </div>

        <!-- Process Payments Action Card -->
        <div class="action-card payments-action">
            <div class="action-icon-large">
                <i class="fa-solid fa-money-check-dollar"></i>
            </div>
            <div class="action-content">
                <h3>Process Payments</h3>
                <p>Review and process pending payments for approved claims efficiently and accurately</p>
                <a href="/HR/ProcessPayments" class="btn-action btn-success">
                    <i class="fa-solid fa-hand-holding-dollar"></i>
                    Process Now
                </a>
            </div>
            <div class="action-badge">
                <i class="fa-solid fa-bolt"></i>
            </div>
        </div>
    </div>
</div>

