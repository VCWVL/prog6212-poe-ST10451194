@model PROG_POE.Models.Claim
@{
    ViewData["Title"] = "Create Claim";
}

<h2>Create New Claim</h2>

<form asp-action="CreateClaim" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="HoursWorked"></label>
        <input asp-for="HoursWorked" type="number" step="0.01" />
        <span asp-validation-for="HoursWorked"></span>
    </div>
    <div>
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" type="number" step="0.01" />
        <span asp-validation-for="HourlyRate"></span>
    </div>
    <div>
        <label asp-for="Upload"></label>
        <input asp-for="Upload" type="file" />
    </div>
    <button type="submit">Submit Claim</button>
</form>
